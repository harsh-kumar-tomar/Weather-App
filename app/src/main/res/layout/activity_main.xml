<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@drawable/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostly Cloudy"
                android:textColor="#fff"
                android:textSize="20sp"
                android:fontFamily="@font/varela_font"
                android:textAlignment="center"
                android:layout_marginTop="50dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16sp"
                android:background="@drawable/cloudy_sunny"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon Sept 6 | 2:37 PM"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/varela_font"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 25°"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="70sp"
                android:layout_marginTop="20sp"
                android:fontFamily="sans-serif-condensed-light"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High 27° | Low 20°"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="30sp"
                android:fontFamily="@font/varela_font"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20sp"
                android:background="@drawable/background2"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="0.33"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageViewrg"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        app:srcCompat="@drawable/rain" />

                    <TextView
                        android:id="@+id/textVfeiew4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="22%"
                        android:fontFamily="@font/varela_font"
                        android:layout_margin="5sp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewfe5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rain"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/varela_font"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="0.33"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageVfeiew"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        app:srcCompat="@drawable/wind" />

                    <TextView
                        android:id="@+id/texfetView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12 km/h"
                        android:layout_margin="5sp"
                        android:fontFamily="@font/varela_font"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/texfetView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wind Speed"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/varela_font"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="0.33"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        app:srcCompat="@drawable/humidity" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="18%"
                        android:fontFamily="@font/varela_font"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/varela_font"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:text="Today"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/varela_font"

                    android:textColor="#fff"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:text="Next 7 Day >"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:padding = "5sp"
                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                />


        </LinearLayout>


    </ScrollView>













</androidx.constraintlayout.widget.ConstraintLayout>

